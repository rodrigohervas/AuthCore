
@{
    ViewData["Title"] = "LogedInUsers";
}

<div class="row">
    <div class="col-md-12">
        <h2>User is Loged In</h2>
    </div>
</div>

<div class="row mt-5">
    <div class="col-md-8">
        <div>

            <p>Welcome <b>@User.Identity.Name</b>, you are loged in the application now!</p>

            <p>If you'd like to access a restricted area, please <b><a asp-controller="Authorization" asp-action="Index">select</a></b> a user role.</p>

            <div>
                <form method="post" asp-action="Logout" asp-controller="Authentication">
                    <button type="submit" class="btn btn-default">Logout</button>
                </form>
            </div>
        </div>
    </div>
</div>