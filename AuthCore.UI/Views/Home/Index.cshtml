@{
    ViewData["Title"] = "Home Page";
}


<div class="row">
    <div class="col-md-12">
        <h2>Basic Authentication and Authorization in ASP.NET Core 2.1</h2>
    </div>
</div>

<div class="row mt-5">
    <div class="col-md-6">
        <div>
            <p>Basic Auth Core 2 is a basic authentication and authorization sample in ASP.NET Core 2 using cookie authentication without Identity.</p>
            <button type="button" class="btn btn-primary">Learn more</button>
        </div>
    </div>
    <div class="col-md-4">

        @if (User.Identity.IsAuthenticated)
        {
            <p>Welcome <b>@User.Identity.Name</b>, you are loged in the application now!</p>

            <p>If you'd like to access a restricted area, please <b><a asp-controller="Authorization" asp-action="Index">select</a></b> a user role.</p>

            <div>
                <form method="post" asp-action="Logout" asp-controller="Authentication">
                    <button type="submit" class="btn btn-default">Logout</button>
                </form>
            </div>
        }
        else
        {

            <form method="post" asp-controller="Authentication" asp-action="Login">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" name="name" placeholder="Your name here" />
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" name="password" placeholder="Your password here" />
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="text" class="form-control" name="email" placeholder="yourname@email.com" />
                </div>
                <button type="submit" class="btn btn-primary">Sign in</button>
            </form>
        }

    </div>
</div>
