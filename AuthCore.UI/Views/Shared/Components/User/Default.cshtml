@model UserViewModel

<div class="dropdown">
    <div class="dropdown-toggle" data-toggle="dropdown" id="UserDropDown">
        <a href="#">@Model.Name <i class="far fa-user"></i> </a>
        
        
    </div>
    <div class="dropdown-menu dropdown-menu-left" aria-labelledby="UserDropDown">
        <div class="dropdown-item d-flex justify-content-start lh-condensed">
            <h6 class="my-0">Username:</h6>
            &nbsp;
            <small class="text-muted">@Model.Name</small>
        </div>
        <div class="dropdown-item ">
            <h6 class="my-0">Email:</h6>
            <small class="text-muted">@Model.Email</small>
        </div>
        <div class="dropdown-divider"></div>
        <div class="dropdown-item">
            <form method="post" asp-action="Logout" asp-controller="Authentication">
                <button type="submit" class="btn btn-default">Logout</button>
            </form>
        </div>
    </div>
</div>